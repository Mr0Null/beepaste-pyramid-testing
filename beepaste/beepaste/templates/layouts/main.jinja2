<!DOCTYPE html>
<html lang="{{request.locale_name}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Yet another secure pastebin with encryption!">
    <meta name="author" content="BeePaste">
    <link rel="shortcut icon" href="{{request.static_url('beepaste:static/img/icon.png')}}">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>{{ title }}</title>

    <link href="{{request.static_url('beepaste:static/css/style.css')}}" rel="stylesheet" media="screen,projection">
    <link href="{{request.static_url('beepaste:static/css/font-awsome.css')}}" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <script type="text/javascript" src="{{request.static_url('beepaste:static/js/jquery.min.js')}}"></script>
    <script type="text/javascript" src="{{request.static_url('beepaste:static/js/materialize.min.js')}}"></script>

    {% block navbar %}
        {{ panel('navbar') }}
    {% endblock %}
    <script>
        $(".button-collapse").sideNav();
    </script>
    <main>
        {% block content %}
        {% endblock %}
    </main>

    {% block footer %}
        {{ panel('footer') }}
    {% endblock %}
  </body>
</html>
