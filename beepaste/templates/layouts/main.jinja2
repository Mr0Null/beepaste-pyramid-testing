    <link href="{{request.static_url('beepaste:static/css/font-awsome.css')}}" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <!--<script type="text/javascript" src="{{request.static_url('beepaste:static/js/jquery.js')}}"></script>-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>

    {% block navbar %}
        {{ panel('navbar') }}
    {% endblock %}
    <script>
        $(".button-collapse").sideNav();
    </script>
    <main>
        {% block content %}
        {% endblock %}
    </main>

    {% block footer %}
        {{ panel('footer') }}
    {% endblock %}
  </body>
</html>
